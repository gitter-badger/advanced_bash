<bigreen>#! /bin/bash

sum() {
  declare -a NUMBERS=(${@})
  declare -i SUM=0
  for NUMBER in "${NUMBERS[@]}"; do
    SUM=$(( ${SUM} + ${NUMBER} ))
  done
  echo ${SUM}
}

TOTAL=$(sum "${@}")
echo "${TOTAL}"


